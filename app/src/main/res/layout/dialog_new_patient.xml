<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp">

    <EditText
        android:id="@+id/dialog_newPatient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_edit_text"
        android:hint="نام"
        android:inputType="text|textNoSuggestions"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/dialog_newPatient_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_newPatient_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_edit_text"
        android:hint="نام خانوادگی"
        android:inputType="text|textNoSuggestions"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/dialog_newPatient_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_newPatient_family"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_edit_text"
        android:hint="شماره تلفن همراه"
        android:inputType="text|textNoSuggestions"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/dialog_newPatient_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_newPatient_mobile"
        android:layout_marginTop="20dp"
        android:text="مایل به ثبت نام بیمار در سامانه می باشم " />

    <CheckBox
        android:id="@+id/dialog_newPatient_chbox"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dialog_newPatient_tv"
        android:layout_toLeftOf="@id/dialog_newPatient_tv" />

    <Button
        android:id="@+id/dialog_newPatient_insertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_newPatient_tv"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_button"
        android:text="دریافت نوبت"
        android:textColor="@android:color/white" />
</RelativeLayout>