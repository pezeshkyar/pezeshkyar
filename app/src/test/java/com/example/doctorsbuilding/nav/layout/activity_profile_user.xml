<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_userProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainContent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#668eaa"
        android:gravity="center"
        android:text="مشخصات فردی بیمار"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="@dimen/my_padding">

            <EditText
                android:id="@+id/user_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfileName"
                android:inputType="text|textNoSuggestions"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp" />

            <EditText
                android:id="@+id/user_profile_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfileFamily"
                android:inputType="text|textNoSuggestions"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="8dp" />

            <EditText
                android:id="@+id/user_profile_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfileMobile"
                android:inputType="number|textNoSuggestions"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="8dp" />

            <EditText
                android:id="@+id/user_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfileUserName"
                android:inputType="text|textNoSuggestions"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp" />

            <EditText
                android:id="@+id/user_profile_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfilePassword"
                android:inputType="text|textNoSuggestions"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp" />

            <EditText
                android:id="@+id/user_profile_rePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_edit_text"
                android:hint="@string/userProfileRePassword"
                android:inputType="text|textNoSuggestions"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp" />

            <Spinner
                android:id="@+id/user_profile_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_spinner"></Spinner>

            <Spinner
                android:id="@+id/user_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_spinner"></Spinner>

            <Button
                android:id="@+id/user_profile_brnInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/my_button"
                android:text="@string/userProfileBtnInsert"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/user_profile_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>